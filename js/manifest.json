{
"manifest_version": 2,
    "name": "ReactOnFly",
    "description": "React to a facebook post just by your facial expressions",
    "version": "1.0",
    "permissions": [
    "*://*/"
   ],
   "content_scripts": [
    {
      "matches": ["*://www.facebook.com/*"],
      "js": ["content.js"]     
    }
  ]   

}


